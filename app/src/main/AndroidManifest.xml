<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.rastanco.mobilemarket"
    android:installLocation="auto"
    android:supportsRtl="true"
    android:versionCode="4">

    <!-- Start  Pushe Permission -->
    <permission
        android:name="ir.rastanco.mobilemarket.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="ir.rastanco.mobilemarket.permission.C2D_MESSAGE" />
    <!-- Optional permissions -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- End   Pushe Permission -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".presenter.SplashHandler"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presenter.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".presenter.ProductInfoPresenter.ProductInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".presenter.shoppingBagPresenter.ShoppingBagActivity" android:screenOrientation="portrait"/>
        <activity android:name=".presenter.ProductInfoPresenter.ProductOptionActivity" android:screenOrientation="portrait"/>
        <activity android:name=".presenter.UserProfilePresenter.AccountManagerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".presenter.UserProfilePresenter.UserFavouriteProduct" android:screenOrientation="portrait"/>
        <activity android:name=".presenter.UserProfilePresenter.UserLastShoppingProduct" android:screenOrientation="portrait"/>

        <service android:name=".presenter.Services.NotificationService" />
        <service android:name=".presenter.Services.DownloadService"/>
        <service android:name=".presenter.Services.UpdateService"/>
        <service android:name=".presenter.Services.CompleteDataAfterInstall"/>
        <service android:name=".presenter.Services.DownloadProductOption"/>

        <receiver android:name=".presenter.Services.UpdateEveryConnectionOk">
            <intent-filter>
                <action android:name="android.net.wifi.STATE_CHANGE" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity android:name=".presenter.UserProfilePresenter.LoginActivity" android:screenOrientation="portrait"/>

        <activity android:name=".presenter.FullScreenPAgeUserGuider"
            android:theme="@style/Transparent"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="ir.rastanco.mobilemarket.presenter.UserHelper" android:screenOrientation="portrait"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Start Pushe Information -->
        <receiver android:name="co.ronash.pushe.receiver.UpdateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data
                    android:path="ir.rastanco.mobilemarket"
                    android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="ir.rastanco.mobilemarket" />
            </intent-filter>
        </receiver>
        <meta-data android:name="co.ronash.pushe.token" android:value="f7-157d-4f_39109906948"/>
        <!-- End Pushe Information -->



    </application>

</manifest>
