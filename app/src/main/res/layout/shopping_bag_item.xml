<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="12"
    android:background="@color/white">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imb_delete"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="2"
        android:background="@color/white"
        android:padding="10dp"
        android:src="@mipmap/ic_delete_from_basket" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_counter"
        android:background="@color/white"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="3dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/txt_productTitle"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center_vertical" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/txt_productPrice"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/txt_productOff"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@color/white"/>
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/img_productImage"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingTop="2dp" />

</LinearLayout>