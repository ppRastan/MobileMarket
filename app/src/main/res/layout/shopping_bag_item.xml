<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_window">
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:contentPadding="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/shopping__bag_img"
            android:layout_width="120dp"
            android:background="@color/white"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/shopping_bag_txt_productTitle"
            android:layout_toEndOf="@+id/shopping_bag_txt_productTitle" />

        <TextView
            android:background="@color/white"
            android:id="@+id/shopping_bag_txt_productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="20dp"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_alignBottom="@+id/shopping__bag_img"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:entries="@array/spinnerItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="#666"
            android:textSize="12dp"
            android:id="@+id/spinner"
            android:layout_below="@+id/shopping_bag_txt_productTitle"
            android:layout_alignLeft="@+id/shopping_bag_txt_productTitle"
            android:layout_alignStart="@+id/shopping_bag_txt_productTitle" />

        <TextView
android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:padding="8dp"
            android:text="price"
            android:id="@+id/shopping_bag_price_Of_product"
            android:textColor="@color/black"
            android:layout_marginRight="13dp"
            android:textSize="14dp"
            android:gravity="center_horizontal|right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopping_bag_price_Of_product"
            android:maxLines="3"
            android:padding="8dp"
            android:text="price"
            android:background="@color/white"
            android:id="@+id/shopping_bag_price_for_you"
            android:textColor="@color/green"
            android:textSize="14dp"
            android:layout_marginRight="13dp"
            android:gravity="center_horizontal|right"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="2dp"
           android:padding="5dp"
           android:layout_below="@+id/shopping_bag_price_for_you"
           android:background="@color/background_window"
           android:id="@+id/relative_layout">

       </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textColor="@color/orange"
            android:padding="4dp"
            android:id="@+id/_shopping_bag_delete_btn"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_below="@+id/relative_layout"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>