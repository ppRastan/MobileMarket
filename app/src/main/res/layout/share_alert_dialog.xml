<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:weightSum="10">

        <ir.rastanco.mobilemarket.utility.FontTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="8"
            android:padding="5dp"
            android:text="@string/pm_to_friend"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <ImageButton
            android:id="@+id/close_pm_to_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="2"
            android:background="@null"
            android:padding="5dp"
            android:contentDescription="@string/cancel_search_dialuge"
            android:src="@drawable/ic_cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/orange"/>

    <EditText
        android:id="@+id/text_to_send"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginRight="7dp"
        android:background="@color/white"
        android:hint="@string/text_to_send"
        android:lineSpacingExtra="7dp"
        android:maxLines="10"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />

    <Button
        android:id="@+id/send_my_pm"
        style="?borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@null"
        android:gravity="center"
        android:text="@string/share"
        android:textColor="@color/black" />
</LinearLayout>