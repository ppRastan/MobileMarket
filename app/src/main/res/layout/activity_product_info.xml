<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/decoriss"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal|bottom"
            android:text="name"
            android:id="@+id/name_of_photo"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="4.5"
        android:layout_height="0dp"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_productInfo"
             />
    </LinearLayout>

     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:background="@color/white">
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:scrollbars="none"
        android:layout_above="@+id/footer">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:weightSum="4">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/img_share_full_screen"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@mipmap/ic_share_toolbar"
                android:background="@color/white" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/telegram"
                android:id="@+id/telegram_share"
                android:background="@color/white"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/add_to_favorite"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/white"
                android:src="@mipmap/ic_like_toolbar"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/img_info"
                android:src="@mipmap/information"
                android:background="@color/white"
                android:layout_gravity="center_horizontal|center_vertical" />
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/green"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="match_parent"
        android:background="@color/green"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/bye"
        android:id="@+id/full_screen_add_to_basket_btn"
        android:textColor="@color/white"
        android:drawablePadding="8dp"
        android:drawableRight="@mipmap/basket_white"
        />

</LinearLayout>
        </LinearLayout>
