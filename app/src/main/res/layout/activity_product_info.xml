<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="3"
        android:background="@color/decoriss"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_of_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_productInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/white"
            android:contentDescription="@string/productFullScreenPhoto"
            android:scaleType="fitStart" />

        <ImageButton
            android:id="@+id/ic_offer_full_screen_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_productInfo"
            android:layout_marginLeft="19dp"
            android:background="@null"
            android:contentDescription="@string/thisProductHasOffer"
            android:src="@mipmap/offer_icon_right_special_full_screen_page" />


    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/white"
        android:padding="2dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:gravity="center"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_ProductQuality"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:contentDescription="@string/imageQuality"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:gravity="center_vertical|center_horizontal"
            android:padding="7dp"
            android:text="@string/rank_of_product"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/img_share_full_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@string/shareCurrentProduct"
            android:src="@mipmap/ic_share_toolbar"
            tools:ignore="NestedWeights" />

        <ImageButton
            android:id="@+id/telegram_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@string/shareByTelegram"
            android:src="@mipmap/telegram" />

        <ImageButton
            android:id="@+id/add_to_favorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@string/addProductToFavorits"
            android:src="@mipmap/ic_like_toolbar" />

        <ImageButton
            android:id="@+id/img_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@string/informationOfCurrentProduct"
            android:src="@mipmap/information" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/green"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center">

            <Button
                android:id="@+id/full_screen_add_to_basket_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/basket_white"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/smallerTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:orientation="horizontal" />


        <Button
            android:id="@+id/displayCurrentImageInSite"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/visitInSite"
            android:textColor="@color/white"
            android:textSize="@dimen/smallerTextSize" />
        <!--android:drawablePadding="8dp"-->
        <!--android:drawableRight="@mipmap/basket_white"-->


    </LinearLayout>
</LinearLayout>
