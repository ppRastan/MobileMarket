<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:id="@+id/shopping_page_cart_view"
        android:padding="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null">

                <ImageView
                    android:id="@+id/imageProductshoppage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <jp.shts.android.library.TriangleLabelView
                    android:id="@+id/ic_offer_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    app:backgroundColor="@color/offer_icon_color"
                    app:corner="leftTop"
                    app:labelBottomPadding="15dp"
                    app:labelCenterPadding="6dp"
                    app:labelTopPadding="10dp"
                    app:primaryTextColor="@color/white"
                    app:primaryTextSize="@dimen/textSize" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="horizontal">

                <ir.rastanco.mobilemarket.utility.FontTextView
                    android:id="@+id/txt_price_for_you"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textSize="@dimen/textSize" />

                <ImageButton
                    android:id="@+id/empty_like_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/liked"
                    android:padding="3dp"
                    android:src="@drawable/toolbar_add_to_favorite_border" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>