<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ProgressBar
            android:id="@+id/prograssBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:foregroundGravity="center_horizontal|center_vertical" />-->

        <ImageView
            android:id="@+id/imageButton_picProduct"
            android:layout_width="match_parent"
            android:contentDescription="@string/productPicture"
            android:layout_height="match_parent"
            android:foregroundGravity="center_horizontal|center_vertical"
            android:padding="4dp" />

        <ImageButton
            android:id="@+id/ic_offer_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/thisProductHasOffer"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:src="@mipmap/offer_icon_right_special" />

        <ImageButton
            android:id="@+id/ic_offer_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/thisProductHasOffer"
            android:src="@mipmap/offer_icon_left_special" />


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_infoProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/textSize" />
    <!--
    price of product
    -->
    <TextView
        android:id="@+id/txt_priceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />

    <!--
    price of product for you
    -->
    <TextView
        android:id="@+id/txt_price_for_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="@dimen/textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/decoriss"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/basket_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/bye"
            android:background="@null"
            android:padding="3dp"
            android:src="@mipmap/bye_toolbar" />

        <ImageButton
            android:id="@+id/share_toolbar_in_main_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/shareCurrentProduct"
            android:padding="3dp"
            android:src="@mipmap/ic_share_toolbar" />

        <ImageButton
            android:id="@+id/empty_like_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:padding="3dp"
            android:contentDescription="@string/liked"
            android:src="@mipmap/ic_like_toolbar" />
    </LinearLayout>
</LinearLayout>