<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <Button
            android:id="@+id/filter_dialogue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/add_filter"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/md_btn_selected"></LinearLayout>

        <Button
            android:id="@+id/group_dialog"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/group"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ir.rastanco.mobilemarket.utility.FontTextView
            android:id="@+id/filter_dialogue_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/all"
            android:textColor="@color/black"
            android:textSize="@dimen/smallerTextSize"
            tools:ignore="NestedWeights" />


        <ir.rastanco.mobilemarket.utility.FontTextView
            android:id="@+id/group_dialog_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/all"
            android:textColor="@color/black"
            android:textSize="@dimen/smallerTextSize" />

    </LinearLayout>

</LinearLayout>