<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/decoriss">
    <include layout="@layout/shopping_bag_toolbar"/>
    <include layout="@layout/total_basket_price_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_window">
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_shoppingBag"
        android:layout_gravity="right"
        android:layout_weight="1" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="0dp">
        <Button
            android:layout_height="?actionBarSize"
            android:layout_width="fill_parent"
            android:background="@color/green"
            android:layout_marginBottom="0dp"
            android:layout_alignTop="@+id/foreground"
            android:layout_alignRight="@id/foreground"
            android:layout_alignLeft="@id/foreground"
            android:id="@+id/ok_shop" />
        <RelativeLayout
            android:id="@id/foreground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/button_text"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/finish_shopping" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/button_text"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:src="@mipmap/finish_shopping" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>